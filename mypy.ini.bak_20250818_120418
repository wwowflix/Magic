[mypy]
# Only check our code, not backups/vendor/generated
files = tools, agents, orchestration, configs, tests

# Be strict enough, but don't explode on 3rd-party imports
ignore_missing_imports = True
warn_unused_ignores = True
warn_redundant_casts = True
warn_unused_configs = True

# Global path excludes (regex, anchors are repo-relative)
exclude = (?x)(
    ^backups/|
    ^quarantine/|
    ^outputs/|
    ^scripts/|            # vendor utilities here
    ^other_folder/|
    ^flow_export/
)